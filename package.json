{
  "name": "@alsadi/simple_http_server",
  "version": "0.0.1",
  "description": "Simple HTTP server",
  "exports": {
    ".": "./index.js",
    "./lib": "./lib"
  },
  "types": "./index.d.ts",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint -c .eslintrc.json cli.js lib/**/*.js",
    "lintfix": "eslint -c .eslintrc.json --fix cli.js lib/**/*.js",
    "test": "node --es-module-specifier-resolution=node --abort-on-uncaught-exception --unhandled-rejections=strict --trace-warnings ./test.js",
    "types": "tsc index.js lib/**/*.js --declaration --allowJs --emitDeclarationOnly --outFile index.d.ts",
    "repl": "node -r esm",
    "build": "rollup -c",
    "dev": "rollup -c -w"
  },
  "dependencies": {},
  "private": false,
  "author": "alsadi@gmail.com",
  "license": "Apache-2.0",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "esm": "^3.2.25",
    "rollup": "^2.3.4",
    "rollup-plugin-css-chunks": "^2.0.3",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-extract-bundle-tree": "^1.2.0",
    "rollup-plugin-import-assets": "^1.1.1",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "typescript": "^4.2.3"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muayyad-alsadi/node-simple-http-server.git"
  },
  "keywords": [
    "http",
    "server"
  ],
  "bugs": {
    "url": "https://github.com/muayyad-alsadi/node-simple-http-server/issues"
  },
  "homepage": "https://github.com/muayyad-alsadi/node-simple-http-server#readme"
}
